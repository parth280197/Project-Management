@model IEnumerable<Project_Management.Models.Project>

@{
    ViewBag.Title = "List";
}

<h2>List</h2>

<p>
    @Html.ActionLink("Create New", "CreateOrUpdate")
</p>
<table class="table table-bordered">
  <tr>
    <th>
      @Html.DisplayNameFor(model => model.Name)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.Description)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.CompletedPercentage)
    </th>
    <th>
      Actions
    </th>

  </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
          <div class="progress">
            <div class="progress-bar bg-success" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">@item.CompletedPercentage</div>
          </div>
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) 
            
        </td>
    </tr>
}

</table>
