@model IEnumerable<Project_Management.Models.Notes>

@{
    ViewBag.Title = "List";
}

<h2>Notes</h2>
<h4>Task name: @ViewBag.Task.Name</h4>
<h4>Task description: @ViewBag.Task.Description</h4>
<div class="progress">
  <div class="progress-bar bg-success" role="progressbar" style="width: @ViewBag.Task.CompletedPercentage%" aria-valuenow="@ViewBag.Task.CompletedPercentage" aria-valuemin="0" aria-valuemax="100">@ViewBag.Task.CompletedPercentage</div>
</div>
<table class="table">
    <tr>
        <th>
          @Html.DisplayNameFor(model => model.User.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.User.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Comment)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedDate,"{0:d MMM yyyy}")
        </td>
    </tr>
}
</table>
